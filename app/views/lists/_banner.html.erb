<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.9)), url(<%= cl_image_path list.banner.key, crop: :fill %>);">

  <div class="container ps-5 d-flex  align-items-center">
    <h1 class="my-4">Your list: <strong><%= @list.name %></strong></h1>
    <div>    
      <%= link_to list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list ?"}, class: "ms-4 link-primary link-underline-opacity-0 me-3" do %>
        <i class="fa-solid fa-trash fs-3" title="Delete the list"></i>
      <% end %>
    </div>
  </div>



</div>




